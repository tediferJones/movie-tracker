// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model lists {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  username String
  listname String
  imdbID String

  @@unique([username, listname, imdbID])
}

model reviews {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  username String
  imdbID String
  watchAgain Boolean @default(false)
  myRating Int @default(0) @db.Int
  myReview String 

  @@unique([username, imdbID])
}

model watched {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  username String
  imdbID String
  date Int @db.Long

  @@unique([id, username])
  @@unique([username, imdbID, date])
}

model media {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  Title String
  Year Int @db.Int
  Rated String?
  Released Int? @db.Long
  Runtime Int? @db.Int
  Plot String?
  Language String[]
  Country String[]
  Awards String?
  Poster String?
  imdbID String @unique
  Type String
  DVD Int? @db.Long
  BoxOffice Int? @db.Long
  Production String?
  Website String?
  Genre String[]
  Director String[]
  Writer String[]
  Actors String[]
  imdbVotes Int? @db.Int
  IMDBRating Int? @db.Int
  RottenTomatoesRating Int? @db.Int
  MetacriticRating Int? @db.Int
  cachedAt Int @db.Long
  totalSeasons Int? @db.Int
  Season Int? @db.Int
  Episode Int? @db.Int
  seriesID String?
}
